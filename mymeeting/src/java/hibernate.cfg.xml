<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/my_meeting</property>
    <property name="hibernate.connection.username">my_meeting</property>
    <property name="hibernate.connection.password">meeting</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <property name="hibernate.use_sql_comments">true</property>
    <property name="hibernate.generate_statistics">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hibernate.query.factory_class">org.hibernate.hql.classic.ClassicQueryTranslatorFactory</property>
    <mapping resource="mymeeting/hibernate/pojo/RAcnGrp.hbm.xml"/>
    <mapping resource="mymeeting/hibernate/pojo/Event.hbm.xml"/>
    <mapping resource="mymeeting/hibernate/pojo/Account.hbm.xml"/>
    <mapping resource="mymeeting/hibernate/pojo/Group.hbm.xml"/>
    <mapping resource="mymeeting/hibernate/pojo/EventDett.hbm.xml"/>
    <mapping resource="mymeeting/hibernate/pojo/RAcnEvn.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
