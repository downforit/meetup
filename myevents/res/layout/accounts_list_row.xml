<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Honeydew" >

        <TextView
            android:id="@+id/lblAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtAccount"
            android:layout_alignParentLeft="true"
            android:text="@string/account"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/Gray" />

        <TextView
            android:id="@+id/lblTwoPointSep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtAccount"
            android:layout_toRightOf="@id/lblAccount"
            android:text="@string/twoPointSep"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Gray" />

        <TextView
            android:id="@id/txtAccount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/lblTwoPointSep"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Black" />

    </RelativeLayout>

    <TextView
         android:id="@+id/lblFake"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="various infos"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:background="@color/Honeydew"
         android:textColor="@color/Gray" />
    
</LinearLayout>